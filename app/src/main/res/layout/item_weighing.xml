<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:padding="5dp"
    app:cardBackgroundColor="@color/blanco"
    app:cardCornerRadius="8dp"
    app:cardElevation="15dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="1139dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="22dp"
                            android:layout_marginEnd="22dp"
                            android:layout_marginTop="6dp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Linea 1"
                            android:textColor="@color/negro"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"
                            android:text="PRODUCTO"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/negro"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tv_weighing_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="6dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="ACIDO TARTARICO POLVO X 25KG"
                            android:textColor="@color/negro"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="FECHA"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/negro"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="6dp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="10/10/2024 15:23"
                            android:textColor="@color/negro"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/bt_expand"
                            android:layout_width="108dp"
                            android:layout_height="85dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/boton_mas_i"
                            android:orientation="horizontal">


                        </Button>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ln_expand"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/stylekeycor"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:padding="5dp"
                                android:text="NETO"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/negro"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/tv_net"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:layout_marginEnd="22dp"
                                android:layout_weight="1"
                                android:background="@drawable/stylesubrayado3"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textColor="@color/negro"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:padding="5dp"
                                android:text="BRUTO"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/negro"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/tv_weighing_gross"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:layout_marginEnd="22dp"
                                android:layout_weight="1"
                                android:background="@drawable/stylesubrayado3"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textColor="@color/negro"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="22dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="TARA CAJA"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/negro"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/tv_tare_box"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:layout_marginEnd="22dp"
                                android:layout_weight="1"
                                android:background="@drawable/stylesubrayado3"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textColor="@color/negro"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="22dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="TARA HIELO"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/negro"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/tv_tare_ice"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:layout_marginEnd="22dp"
                                android:layout_weight="1"
                                android:background="@drawable/stylesubrayado3"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textColor="@color/negro"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="22dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="TARA PIEZAS"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/negro"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/tv_tare_parts"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:layout_marginEnd="22dp"
                                android:layout_weight="1"
                                android:background="@drawable/stylesubrayado3"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textColor="@color/negro"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="22dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="TARA TAPA"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/negro"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/tv_tare_top"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:layout_marginEnd="22dp"
                                android:layout_weight="1"
                                android:background="@drawable/stylesubrayado3"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textColor="@color/negro"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="22dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="OPERADOR"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/negro"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/tv_weighing_operator"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:layout_marginEnd="22dp"
                                android:layout_weight="1"
                                android:background="@drawable/stylesubrayado3"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textColor="@color/negro"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="22dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="DESTINATARIO"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/negro"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/tv_destinatation"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:layout_marginEnd="22dp"
                                android:layout_weight="1"
                                android:background="@drawable/stylesubrayado3"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textColor="@color/negro"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="22dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="LOTE"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/negro"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/tv_batch"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:layout_marginEnd="22dp"
                                android:layout_weight="1"
                                android:background="@drawable/stylesubrayado3"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textColor="@color/negro"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/bt_delete"
                                android:layout_width="70dp"
                                android:layout_height="60dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="5dp"
                                android:background="@drawable/boton_eliminar_i"
                                android:orientation="horizontal">


                            </Button>

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="22dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="CALIBRE"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/negro"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/tv_caliber"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:layout_marginEnd="22dp"
                                android:layout_weight="1"
                                android:background="@drawable/stylesubrayado3"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textColor="@color/negro"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>